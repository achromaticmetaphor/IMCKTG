<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="us.achromaticmetaphor.imcktg"
    android:installLocation="auto"
    android:screenOrientation="portrait"
    android:versionCode="13"
    android:versionName="0.6" >

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="28" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:theme="@android:style/Theme.Holo"
        android:label="@string/app_name" >
        <activity
            android:name="us.achromaticmetaphor.imcktg.GaAT"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="us.achromaticmetaphor.imcktg.SelectContacts"
            android:label="@string/title_activity_select_contacts" >
        </activity>
        <activity
            android:name="us.achromaticmetaphor.imcktg.DefaultToneInput"
            android:label="@string/title_activity_default_tone_input" >
        </activity>
        <activity
            android:name="us.achromaticmetaphor.imcktg.ChooseFilename"
            android:label="@string/title_activity_choose_filename" >
        </activity>
        <activity
            android:name="us.achromaticmetaphor.imcktg.ConfirmContacts"
            android:label="@string/title_activity_confirm_contacts" >
        </activity>
        <activity
            android:name="us.achromaticmetaphor.imcktg.About"
            android:label="@string/title_activity_about" />
        <activity
            android:name="us.achromaticmetaphor.imcktg.AboutText"
            android:label="@string/title_activity_about" />
    </application>

    <queries>
        <intent>
            <action android:name="android.intent.action.TTS_SERVICE" />
        </intent>
    </queries>

</manifest>
